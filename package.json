{
  "name": "bookmark-manager",
  "version": "1.0.0",
  "private": true,
  "description": "书签管理器 - TypeScript 全栈学习项目",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/server & npm run dev --workspace=packages/client",
    "dev:server": "npm run dev --workspace=packages/server",
    "dev:client": "npm run dev --workspace=packages/client",
    "dev:desktop": "npm run dev --workspace=packages/desktop",
    "build:desktop": "npm run pack --workspace=packages/desktop",
    "dist:desktop": "npm run dist --workspace=packages/desktop"
  }
}
